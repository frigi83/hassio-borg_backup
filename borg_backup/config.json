{
  "name": "BorgBackup",
  "version": "0.56.4",
  "slug": "borg_backup",
  "description": "BorgBackup as a Hassio Add-On - Fork by frigi83",
  "url": "https://github.com/frigi83/hassio-borg_backup",
  "startup": "once",
  "boot": "manual",
  "map": [
    "backup:rw"
  ],
  "host_network": false,
  "hassio_role": "backup",
  "options": {
    "user": null,
    "host": null,
    "port": 22,
    "path": "~",
    "encryption": "repokey",
    "archive": "hassio",
    "passphrase": null,
    "create_options": "--stats --compression auto,zstd",
    "prune_options": "--keep-daily=8 --keep-weekly=5 --keep-monthly=13",
    "deduplicate_archives": false,
    "local_snapshot": 3
  },
  "schema": {
    "user": "str",
    "host": "str",
    "port": "port",
    "path": "str",
    "encryption": "str",
    "archive": "str",
    "passphrase": "password",
    "prune_options": "str?",
    "create_options": "str?",
    "deduplicate_archives": "bool",
    "local_snapshot": "int(0,)?"
  },
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ]
}
